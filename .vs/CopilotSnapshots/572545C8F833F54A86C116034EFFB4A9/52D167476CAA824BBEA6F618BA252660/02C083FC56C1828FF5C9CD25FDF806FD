using System;
using System.Windows.Forms;
using Newtonsoft.Json;

namespace CourseRegistrationClient
{
    public partial class Form1 : Form
    {
        private ClientSocket clientSocket;
        private string currentUserId;
        private string currentUserRole;
        private string currentUserName;

        public Form1()
        {
            InitializeComponent();
            clientSocket = new ClientSocket();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            if (!clientSocket.Connect())
            {
                MessageBox.Show("Không thể kết nối đến server!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                this.Close();
                return;
            }

            ShowLoginForm();
        }

        private void ShowLoginForm()
        {
            while (true)
            {
                LoginForm loginForm = new LoginForm(clientSocket);
                if (loginForm.ShowDialog() == DialogResult.OK)
                {
                    currentUserId = loginForm.UserId;
                    currentUserRole = loginForm.UserRole;
                    currentUserName = loginForm.FullName;

                    ShowRoleBasedForm();
                    break;
                }
                else
                {
                    // User đóng login form mà không đăng nhập
                    this.Close();
                    break;
                }
            }
        }

        private void ShowRoleBasedForm()
        {
            if (currentUserRole == "Admin")
            {
                AdminForm adminForm = new AdminForm(clientSocket, currentUserId, currentUserName);
                if (adminForm.ShowDialog() != DialogResult.OK)
                {
                    // Admin đăng xuất, quay lại login
                    ShowLoginForm();
                }
            }
            else if (currentUserRole == "Student")
            {
                StudentForm studentForm = new StudentForm(clientSocket, currentUserId, currentUserName);
                if (studentForm.ShowDialog() != DialogResult.OK)
                {
                    // Student đăng xuất, quay lại login
                    ShowLoginForm();
                }
            }
        }

        private void Form1_FormClosing(object sender, FormClosingEventArgs e)
        {
            clientSocket.Disconnect();
        }
    }
}