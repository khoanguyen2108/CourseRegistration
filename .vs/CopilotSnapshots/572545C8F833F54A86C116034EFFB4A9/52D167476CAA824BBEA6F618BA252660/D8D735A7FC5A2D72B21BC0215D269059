using System;
using System.Windows.Forms;
using Newtonsoft.Json;

namespace CourseRegistrationClient
{
    public partial class Form1 : Form
    {
        private ClientSocket clientSocket;

        public Form1()
        {
            InitializeComponent();
            clientSocket = new ClientSocket();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            if (!clientSocket.Connect())
            {
                MessageBox.Show("Không thể kết nối đến server!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                this.Close();
                return;
            }

            this.Hide();
            ShowLoginForm();
        }

        private void ShowLoginForm()
        {
            while (true)
            {
                LoginForm loginForm = new LoginForm(clientSocket);
                if (loginForm.ShowDialog() == DialogResult.OK)
                {
                    string userId = loginForm.UserId;
                    string userRole = loginForm.UserRole;
                    string fullName = loginForm.FullName;

                    Console.WriteLine($"[CLIENT] Login success - UserId: {userId}, Role: {userRole}, Name: {fullName}");

                    ShowRoleBasedForm(userId, userRole, fullName);
                }
                else
                {
                    this.Close();
                    break;
                }
            }
        }

        private void ShowRoleBasedForm(string userId, string userRole, string fullName)
        {
            if (userRole == "Admin")
            {
                Console.WriteLine("[CLIENT] Opening AdminForm...");
                AdminForm adminForm = new AdminForm(clientSocket, userId, fullName);
                adminForm.ShowDialog();
                Console.WriteLine("[CLIENT] AdminForm closed");
            }
            else if (userRole == "Student")
            {
                Console.WriteLine("[CLIENT] Opening StudentForm...");
                StudentForm studentForm = new StudentForm(clientSocket, userId, fullName);
                studentForm.ShowDialog();
                Console.WriteLine("[CLIENT] StudentForm closed");
            }
            else
            {
                MessageBox.Show($"Role không được nhận diện: {userRole}", "Lỗi");
            }
        }

        private void Form1_FormClosing(object sender, FormClosingEventArgs e)
        {
            clientSocket.Disconnect();
        }
    }
}